<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff6666"
    android:weightSum="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.35">
        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/map"
            tools:context=".ResponseScreen"
            android:name="com.google.android.gms.maps.SupportMapFragment" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:text="Responders ETA"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:paddingRight="5dp"/>

        </fragment>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.65"
        android:weightSum="1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.45"
            android:orientation="vertical"
            android:background="@drawable/border"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin">
            <TextView
                android:id="@+id/distress_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name : "
                android:textSize="16sp"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:textColor="@color/LightRed2"/>
            <TextView
                android:id="@+id/distress_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age : "
                android:textSize="16sp"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:textColor="@color/LightRed2"/>
            <TextView
                android:id="@+id/distress_preexisting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pre-existing Conditions : "
                android:textSize="16sp"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:textColor="@color/LightRed2"/>
            <TextView
                android:id="@+id/distress_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number : "
                android:textSize="16sp"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:textColor="@color/LightRed2"/>
            <TextView
                android:id="@+id/distress_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/LightRed2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.55"
            android:weightSum="1"
            android:divider="@drawable/separator"
            android:showDividers="middle"
            android:dividerPadding="22dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="@drawable/border">
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:text="Yes"
                android:id="@+id/yesResponse"
                android:textSize="50sp"
                android:textColor="@color/White"
                android:gravity="center"
                android:background="@color/Green"
                android:layout_marginRight="@dimen/activity_horizontal_margin"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:text="No"
                android:textColor="@color/White"
                android:textSize="50sp"
                android:gravity="center"
                android:background="@color/Green"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>